<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
</head>

<body>
  <%- include('./partials/navbar') %>


    <div class="vh-100 mt-5 d-flex align-items-center justify-content-center">
      <form class="w-75 p-3 shadow-lg" method="POST" enctype="multipart/form-data", action="/blog">
        <h3 class="text-center">Add Blog</h3>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title">
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <input type="text" class="form-control" id="category" name="category">
        </div>
        <div class="mb-3">
          <label for="formFile" class="form-label">Cover Image</label>
          <input class="form-control" type="file" id="formFile" name="coverImage">
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Content</label>
          <textarea class="form-control" id="content" rows="8" name="content"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div> 

    <%- include('./partials/script') %>

</body>

</html>